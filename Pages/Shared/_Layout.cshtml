<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Chess Knowledge</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/chess_knowledge.styles.css" asp-append-version="true" />
</head>
<body>
    @{ 
        var areaLinks = new[]
        {
            new { Title = "Introduction", Area = "Introduction" },
            new { Title = "Tactics", Area = "Tactics" },
            new { Title = "Calculation & Visualization", Area = "CalculationVisualization" },
            new { Title = "Positional Understanding", Area = "PositionalUnderstanding" },
            new { Title = "Strategy & Planning", Area = "StrategyPlanning" },
            new { Title = "Attack", Area = "Attack" },
            new { Title = "Defence", Area = "Defence" },
            new { Title = "Endgames", Area = "Endgames" },
            new { Title = "Openings", Area = "Openings" },
            new { Title = "Psychological Skills", Area = "PsychologicalSkills" },
            new { Title = "Intuition & Pattern Recognition", Area = "IntuitionPatternRecognition" },
            new { Title = "Evaluation & Decision Making", Area = "EvaluationDecisionMaking" },
            new { Title = "Study & Improvement Methods", Area = "StudyImprovementMethods" }
        };

        var currentArea = ViewContext.RouteData.Values["area"] as string ?? string.Empty;
        var currentPage = ViewContext.RouteData.Values["page"] as string ?? string.Empty;
    }

    <header class="topbar border-bottom mb-3">
        <div class="container d-flex justify-content-between align-items-center py-3">
            <a class="navbar-brand" asp-area="" asp-page="/Index">Chess Knowledge</a>
            <a class="nav-link text-muted" asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </header>

    <div class="layout-shell">
        <nav class="sidebar" aria-label="Primary">
            <h2 class="sidebar-title">Learn Chess</h2>
            <ul class="sidebar-nav">
                <li class="sidebar-item @(string.IsNullOrEmpty(currentArea) && string.Equals(currentPage, "/Index", System.StringComparison.OrdinalIgnoreCase) ? "active" : null)">
                    <a class="sidebar-link" asp-area="" asp-page="/Index">Home</a>
                </li>
                @foreach (var item in areaLinks)
                {
                    var isActive = string.Equals(currentArea, item.Area, System.StringComparison.OrdinalIgnoreCase);
                    <li class="sidebar-item @(isActive ? "active" : null)">
                        <a class="sidebar-link" asp-area="@item.Area" asp-page="/Index">@item.Title</a>
                    </li>
                }
            </ul>
        </nav>
        <div class="content-column">
            <main role="main" class="content-main">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Chess Knowledge by Robert Jober - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
